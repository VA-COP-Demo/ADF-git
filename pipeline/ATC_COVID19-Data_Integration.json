{
	"name": "ATC_COVID19-Data_Integration",
	"properties": {
		"activities": [
			{
				"name": "Copy data1",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "COPS_ADLS_CSV",
						"type": "DatasetReference",
						"parameters": {
							"Filesystem": "@pipeline().parameters.SourceFilesystem",
							"Directory": "@pipeline().parameters.SourceDirectory",
							"Filename": {
								"value": "@pipeline().parameters.SourceFilename",
								"type": "Expression"
							},
							"FileExtension": "@pipeline().parameters.SourceFileExtension"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "COPS_ADLS_json",
						"type": "DatasetReference",
						"parameters": {
							"Filesystem": "@pipeline().parameters.DestinationFilesyste",
							"Directory": "@pipeline().parameters.DestinationDirectory",
							"Filename": "@concat(pipeline().parameters.DestinationFilename,'_',pipeline().TriggerTime)",
							"FileExtension": "@pipeline().parameters.DestinationFileExtension"
						}
					}
				]
			}
		],
		"parameters": {
			"DestinationFilesystem": {
				"type": "string",
				"defaultValue": "atc-va"
			},
			"DestinationDirectory": {
				"type": "string",
				"defaultValue": "Staging"
			},
			"DestinationFilename": {
				"type": "string",
				"defaultValue": "VA Facility Quality Data"
			},
			"DestinationFileExtension": {
				"type": "string",
				"defaultValue": "json"
			},
			"SourceFilesystem": {
				"type": "string",
				"defaultValue": "atc-va"
			},
			"SourceDirectory": {
				"type": "string",
				"defaultValue": "Raw"
			},
			"SourceFilename": {
				"type": "string",
				"defaultValue": "VA Facility Quality Data"
			},
			"SourceFileExtension": {
				"type": "string",
				"defaultValue": "csv"
			}
		},
		"annotations": []
	}
}